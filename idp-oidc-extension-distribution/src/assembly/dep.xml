<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../idp-oidc-extension-impl/src/main/resources/flows</directory>
            <outputDirectory>flows</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../idp-oidc-extension-impl/src/main/resources/views</directory>
            <outputDirectory>views</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../idp-oidc-extension-impl/target/dependency</directory>
            <outputDirectory>edit-webapp/WEB-INF/lib</outputDirectory>
            <includes>
                <include>nimbus-jose-jwt*.jar</include>
                <include>oauth2-oidc-sdk*.jar</include>
                <include>json-smart-*.jar</include>
                <include>accessors-smart-*.jar</include>
                <include>lang-tag-*.jar</include>
                <include>gson-*.jar</include>
                <include>idp-oidc-extension-api-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../idp-oidc-extension-impl/target</directory>
            <outputDirectory>edit-webapp/WEB-INF/lib</outputDirectory>
            <includes>
                <include>idp-oidc-extension-impl-*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>conf/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
